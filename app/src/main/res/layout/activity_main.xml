<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.csulb.android.tacopronto.MainActivity">



        <ImageView
            android:layout_height="65dp"
            app:srcCompat="@drawable/mexicantacos4"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:layout_width="65dp"
            android:layout_width="80dp"
            android:layout_toStartOf="@+id/textView" />

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_width="200dp"
            android:text="Taco Pronto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="123 Euclid Ave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView" />

    <TextView
            android:text="Size"
            android:gravity="center"
            android:background="@drawable/back"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/textView3"
            android:layout_width="180dp" />

        <TextView
            android:text="Tortilla"
            android:gravity="center"
            android:background="@drawable/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:id="@+id/textView5"

            android:layout_alignStart="@+id/radioButton3" />

        <CheckBox
            android:text="Beef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:id="@+id/checkBox"
            android:layout_toStartOf="@+id/button"
            android:layout_alignEnd="@+id/textView4" />

        <CheckBox
            android:text="Pico de Gallo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox8"
            android:layout_above="@+id/checkBox9"
            android:layout_alignStart="@+id/checkBox7"
            android:layout_below="@+id/checkBox7"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:text="LBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox4"
            android:layout_alignStart="@+id/checkBox9"
            android:id="@+id/checkBox10"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/textView8" />

        <CheckBox
            android:text="Cerveza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox12"
            android:layout_above="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/checkBox4" />

        <CheckBox
            android:text="Tequila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox14"
            android:layout_above="@+id/button"
            android:layout_alignStart="@+id/checkBox13"
            android:layout_alignEnd="@+id/checkBox13" />

        <CheckBox
            android:text="Margarita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox13"
            android:layout_above="@+id/checkBox14"
            android:layout_alignStart="@+id/checkBox10"
            android:layout_alignParentEnd="true" />

    <CheckBox
            android:text="SeaFood"
            android:layout_width="wrap_content"
            android:id="@+id/checkBox5"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignEnd="@+id/checkBox"
            android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox4"
        android:layout_above="@+id/textView8" />

    <CheckBox
            android:text="Chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/checkBox3"
        android:layout_alignEnd="@+id/checkBox" />

        <TextView
            android:text="Fillings"
            android:gravity="center"
            android:background="@drawable/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_above="@+id/checkBox6"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:text="Beans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox7"
            android:layout_alignStart="@+id/checkBox6"
            android:layout_below="@+id/checkBox6"
            android:layout_alignParentEnd="true" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_below="@+id/textView4"
            android:layout_alignEnd="@+id/checkBox3"
            android:weightSum="1"
            android:layout_height="62dp">

            <RadioButton
                android:text="Large"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton5"
                android:layout_width="155dp" />

            <RadioButton
                android:text="Medium"
                android:layout_width="155dp"
                android:id="@+id/radioButton6"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <RadioGroup
            android:layout_height="75dp"
            android:layout_above="@+id/textView6"
            android:layout_toEndOf="@+id/checkBox7"
            android:layout_width="90dp"
            android:layout_below="@+id/textView5" >

        </RadioGroup>

        <CheckBox
            android:text="Gaucamolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox9"
            android:layout_above="@+id/checkBox10"
            android:layout_alignStart="@+id/checkBox8"
            android:layout_alignParentEnd="true" />

    <RadioButton
            android:text="Corn"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:layout_below="@+id/textView5"
            android:layout_alignEnd="@+id/radioButton4"
            android:layout_alignStart="@+id/radioButton4" />

    <RadioButton
        android:text="Flour"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentEnd="true"
         />

    <TextView
        android:text="Beverage"
        android:gravity="center"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_above="@+id/checkBox13"
        android:layout_alignParentEnd="true" />

    <CheckBox
            android:text="White Fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView4" />

    <CheckBox
        android:text="Cheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/checkBox3" />

    <CheckBox
        android:text="Soda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox15"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/checkBox12" />

    <CheckBox
        android:text="Rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox6"
        android:layout_above="@+id/checkBox2"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="5628507049"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2" />

    <Button
            android:text="Place Your Order"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_width="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
